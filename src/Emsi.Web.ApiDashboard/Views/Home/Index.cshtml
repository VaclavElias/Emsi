@model HomeViewModel
@{
    ViewData["Title"] = @Model.Title;
}
@if (Model.IsAlert)
{
    <partial name="_AlertPartial" model="Model" />
}
@*<h1 class="display-4">@Model.Title</h1>*@
@*<h2>Skills API</h2>*@
<div class="row">
    <div class="col">
        <div class="card shadow-sm bg-white">
            <div class="card-body">
                <h3>Status</h3>
                <p>
                    <strong>Skills API:</strong>
                    @if (Model.Status is not null)
                    {
                        <span><i class="bi bi-check-circle-fill text-success"></i> @Model.Status.Healthy,</span>
                        <span>@Model.Status.Message</span>
                    }
                </p>
                <p>
                    <strong>Job Titles API:</strong>
                    @if (Model.Status is not null)
                    {
                        <span><i class="bi bi-check-circle-fill text-success"></i> @Model.Status.Healthy,</span>
                        <span>@Model.Status.Message</span>
                    }
                </p>
                <p>
                    <strong>Profile API:</strong>
                    @if (Model.Status is not null)
                    {
                        <span><i class="bi bi-check-circle-fill text-success"></i> @Model.Status.Healthy,</span>
                        <span>@Model.Status.Message</span>
                    }
                </p>

            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm bg-white">
            <div class="card-body">
                <h3>Meta</h3>
                <p>@Model.Meta.LatestVersion</p>
                <p>@Model.Meta.Attribution.Title</p>
                <p>@Model.Meta.Attribution.Body</p>
            </div>
        </div>
    </div>
</div>
<div>
    <div class="col-6">
        <div class="card shadow-sm bg-white">
            <div class="card-body">
                <canvas id="myChart" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
}
